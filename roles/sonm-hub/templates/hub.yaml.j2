endpoint: "{{ hub_endpoint.worker }}"

{% if hub_ipvs_enabled %}
gateway:
  ports: [{{ hub_ipvs_ports_lo }}, {{ hub_ipvs_ports_hi }}]
{% endif %}

cluster:
  endpoint: "{{ hub_endpoint.client }}"

  failover: "{{ hub_cluster.failover }}"

  store:
    type: "{{ hub_cluster.engine }}"
    endpoint: "{{ hub_cluster.endpoint }}"
    bucket: "sonm"

    {% if hub_cluster_key_file is defined or hub_cluster_cert_file is defined %}
    key_file: "{{ hub_cluster_key_file }}"
    cert_file: "{{ hub_cluster_cert_file }}"
    {% endif %}

  # Fine tuning
  leader_key: "sonm/hub/leader"
  member_list_key: "sonm/hub/list"
  sync_prefix: "sync_prefix"
  leader_ttl: "20s"
  announce_period: "20s"
  member_gc_period: "20s"

logging:
  level: -1

ethereum:
  key_store: "{{ sonm_keystore_path }}"
  pass_phrase: "{{ sonm_keystore_passphrese }}"

locator:
  endpoint: "{{ sonm_locator_addr }}"

market:
  endpoint: "{{ sonm_market_addr }}"

whitelist:
  url: "{{ hub_whitelist.url }}"
  enabled: {{ hub_whitelist.enabled }}

